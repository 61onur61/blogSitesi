@model blogSitesi.Models.Uye

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <div style="background-color:#1ABC9C">
        <h2 style="text-align:center;color:#FFFFFF;border-collapse:collapse">Giriş Yap</h2>
    </div>
    <span class="alert-danger h5">@ViewBag.Uyari</span>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.kullaniciAd, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.kullaniciAd, new { htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(model => model.kullaniciAd, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.kullaniciEmail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.kullaniciEmail, new { htmlAttributes = new { @class = "form-control", placeholder="onur@gmail.com"} })
            @Html.ValidationMessageFor(model => model.kullaniciEmail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.kullaniciSifre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.kullaniciSifre, new { htmlAttributes = new { @class = "form-control" ,@type="password"} })
            @Html.ValidationMessageFor(model => model.kullaniciSifre, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Giriş" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div style="text-align:center">
    <label>Üyeliğiniz Yok Mu?</label>
    @Html.ActionLink("Üye Olun", "Create" , "Uye", new { @class = "btn btn-default"})
</div>
